{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px;}
</style>

<div class="example-wrapper">
	<h2> Liste des sejours </h2>
    {%for sejour in lesSejours %}
	<li>
		ID : {{sejour.id}}  
		<a style="color: #2AEFB4;margin-left: 20px" href="{{path('sejourListeSejours',{id:sejour.id})}}">Patient du sejour</a>    
		<a style="color: red" href="{{path('supprimerPatient',{id:sejour.id})}}">supprimer</a>
		<a style="color: #3BAAFF" href="{{path('modifierPatient',{id:sejour.id})}}">modifier</a><br/>
		date d'arrivee : {{sejour.dateArrivee|date("d/m/Y")}}<br/>
		date de sortie : {{sejour.dateSortie|date("d/m/Y")}}<br/>

		

		
	</li>
	{%else%}
	Aucun sejour n'est renseign√©
	{%endfor%}
</div>
{% endblock %}
