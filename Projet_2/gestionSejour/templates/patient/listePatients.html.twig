{% extends 'base.html.twig' %}

{% block title %}Liste patients{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	<h2> Liste des patients </h2>
    {%for patient in patients %}
	<li>
		ID : {{patient.id}}  
		<a style="color: #2AEFB4;margin-left: 20px" href="{{path('sejoursPatient',{id:patient.id})}}">Séjours du patient</a>    
		<a style="color: red" href="{{path('supprimerPatient',{id:patient.id})}}">Supprimer</a>
		<a style="color: #3BAAFF" href="{{path('modifierPatient',{id:patient.id})}}">Modifier</a><br/>
		Nom : {{patient.nom}}<br/>
		Prénom : {{patient.prenom}}<br/>
		Âge : {{patient.age}}<br/>
		Adresse : {{patient.adresse}}, {{patient.cp}} à {{patient.ville}}</br>
		Téléphone : {{patient.telephone}}<br/>
		Adresse mail : {{patient.mail}}<br/><br/>

		
	</li>
	{%else%}
	Aucun patient n'est renseigné.
	{%endfor%}
</div>
{% endblock %}
