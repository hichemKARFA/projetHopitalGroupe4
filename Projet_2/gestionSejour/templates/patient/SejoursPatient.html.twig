{% extends 'base.html.twig' %}

{% block title %}Séjours patient{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
	<b>Liste des séjours effectués pour le patient {{patient.nom}} {{patient.prenom}}<br/><br/></b>
     {%for sejour in patient.sejours %}  
		  Séjour n°{{sejour.id}}<br/>
		  	{%if sejour.dateSortie== null%}
		  	Ce séjour n'est pas terminé.
		  	Le patient a commencé ce séjour le {{sejour.dateArrivee|date("d/m/Y")}} <br/><br/>
		  	
		  	{%else%}
		  	Du {{sejour.dateArrivee|date("d/m/Y")}} au {{sejour.dateSortie|date("d/m/Y")}} <br/><br/>
		  	{%endif%}
	{%else%}
	Ce patient n'a pas encore effectué de séjour.<br/> Vous pouvez ajouter des séjours en cliquant sur ce lien : <a href="{{path('ajouterSejour')}}">Ajouter un séjour</a>
	{%endfor%}

    
<br/><br/>
</div>
{% endblock %}
